<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification_Detail"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/ImageView_NotificationDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />


            <ProgressBar
                android:id="@+id/notiDetail_progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:gravity="bottom"
            android:background="@color/colorPrimaryDark"
            >

            <Button
                android:id="@+id/notiDetail_btnDeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Reject"
                android:fontFamily="@font/amiko_semibold"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_close_black_24dp"
                android:background="@drawable/button_shape_deny"
                />

            <Button
                android:id="@+id/notiDetail_btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape_approve"
                android:padding="16dp"
                android:text="Done"
                android:drawableLeft="@drawable/ic_check_24dp"
                android:fontFamily="@font/amiko_semibold"
                android:textColor="@color/green"
                android:textSize="24sp"
               />
        </LinearLayout>

</LinearLayout>