<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notiDetail_margin"
        android:layout_marginRight="@dimen/notiDetail_margin"
        android:background="@drawable/border_bottom_line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/notiDetail_camera"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Camera láº§u 1"
                android:textSize="@dimen/notiDetail_fontSizeBig" />

            <TextView
                android:id="@+id/notiDetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="07:00"
                android:textSize="@dimen/notiDetail_fontSizeSmall"
                android:layout_alignRight="@+id/notiDetail_camera"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notiDetail_context"
            android:textSize="@dimen/notiDetail_fontSizeSmall" />


    </LinearLayout>


</LinearLayout>