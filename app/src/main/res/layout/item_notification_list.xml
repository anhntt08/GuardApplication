<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/notiDetail_margin"
    android:layout_marginRight="@dimen/notiDetail_margin"
    android:background="@drawable/border_bottom_line"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/notiDetail_imageView"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:src="@drawable/ic_priority_high_red_24dp"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notiDetail_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:text="Cầu thang lầu 1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/notiDetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="20/11/2018"
                android:textColor="#7f7f7f"
                android:textSize="15dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notiDetail_context"
            android:textColor="#7f7f7f"
            android:textSize="@dimen/notiDetail_fontSizeSmall" />


    </LinearLayout>


</LinearLayout>